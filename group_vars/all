---
# Variables listed here are applicable to all host groups

prefix: /usr/local

# Conda
conda_location: "{{ prefix }}/anaconda"

# supervisord
supervisord_etc_dir: /etc/supervisor

# nginx
nginx_etc_dir: /etc/nginx

# gunicorn
gunicorn_etc_dir: /etc/gunicorn

# PyWPS
pywps_etc_dir: /etc/pywps

# WPS
wps_name: emu
wps_repo: https://github.com/bird-house/{{ wps_name }}.git
wps_version: master
wps_location: "{{ prefix }}/{{ wps_name }}"
wps_hostname: localhost
wps_port: 5000
# WPS DB
wps_log_level: INFO
wps_database: sqlite://///var/lib/pywps/db/{{ wps_name }}_log.db
# WPS description
wps_title: Emu PyWPS Application
wps_abstract: WPS processes for testing and demos.
wps_provider_name: Birdhouse
wps_provider_url: http://bird-house.github.io/
